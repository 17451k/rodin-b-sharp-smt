<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="bundledsolvers" name="%point.bundledsolvers" schema="schema/bundledsolvers.exsd"/>
   <extension
         point="org.eventb.core.seqprover.reasoners">
      <reasoner
            class="org.eventb.smt.core.internal.provers.ExternalSMTThroughPP"
            id="externalSMTPP"
            name="%externalSMTPP.name">
      </reasoner>
      <reasoner
            class="org.eventb.smt.core.internal.provers.ExternalSMTThroughVeriT"
            id="externalSMTVeriT"
            name="%externalSMTVeriT.name">
      </reasoner>
   </extension>
   <extension
         point="org.eventb.core.seqprover.tacticParameterizers">
      <parameterizer
            class="org.eventb.smt.core.internal.provers.AutoTactics$SMTPPParameterizer"
            id="SMTPPParam"
            name="%SMTPPParam.name">
         <tacticParameter
               default="true"
               description="%restrictedDesc"
               label="restricted"
               type="Boolean">
         </tacticParameter>
         <tacticParameter
               default="3000"
               description="%timeoutDesc"
               label="timeout"
               type="Long">
         </tacticParameter>
         <tacticParameter
         	   default=""
         	   description="%configIdDesc"
               label="configId"
               type="String">
         </tacticParameter>
      </parameterizer>
      <parameterizer
            class="org.eventb.smt.core.internal.provers.AutoTactics$SMTVeriTParameterizer"
            id="SMTVeriTParam"
            name="%SMTVeriTParam.name">
         <tacticParameter
               default="true"
               description="%restrictedDesc"
               label="restricted"
               type="Boolean">
         </tacticParameter>
         <tacticParameter
               default="3000"
               description="%timeoutDesc"
               label="timeout"
               type="Long">
         </tacticParameter>
         <tacticParameter
         	   default=""
               description="%configIdDesc"
               label="configId"
               type="String">
         </tacticParameter>
      </parameterizer>
   </extension>
   <extension
         point="org.eventb.core.seqprover.autoTactics">
      <autoTactic
            class="org.eventb.smt.core.internal.provers.AutoTactics$SMTPP"
            description="%SMTPP.description"
            id="SMTPP"
            name="%SMTPP.name">
      </autoTactic>
      <autoTactic
            class="org.eventb.smt.core.internal.provers.AutoTactics$SMTVeriT"
            description="%SMTVeriT.description"
            id="SMTVeriT"
            name="%SMTVeriT.name">
      </autoTactic>
   </extension>

</plugin>

<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eventb.ui.proofTactics">
      <dropdown
            id="org.eventb.smt.provers.ui.dropdown"
            name="%dropdown.name"
            priority="org.eventb.smt.provers.ui.dropdown"
            toolbar="org.eventb.ui.sequentToolbar">
            tooltip="%dropdown.name">
      </dropdown>
      <tactic
            dropdown="org.eventb.smt.provers.ui.dropdown"
            icon="icons/SMT.GIF"
            id="org.eventb.smt.provers.ui.pptactic"
            interrupt="true"
            name="%PPtactic.name"
            priority="0"
            skipPostTactic="false"
            tacticProvider="org.eventb.smt.provers.internal.ui.SMTPP"
            target="global"
            tooltip="%PPtactic.tooltip">
      </tactic>
      <tactic
            dropdown="org.eventb.smt.provers.ui.dropdown"
            icon="icons/SMT.GIF"
            id="org.eventb.smt.provers.ui.verittactic"
            interrupt="true"
            name="%VeriTtactic.name"
            priority="1"
            skipPostTactic="false"
            tacticProvider="org.eventb.smt.provers.internal.ui.SMTVeriT"
            target="global"
            tooltip="%VeriTtactic.tooltip">
      </tactic>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.eventb.smt.preferences.ui.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.eventb.smt.preferences.ui.SMTPreferencePage"
            id="org.eventb.smt.provers.ui.page1"
            name="%page.name">
      </page>
   </extension>
   <extension
         point="org.eventb.core.pomTactics">
      <tactic
            id="org.eventb.smt.provers.ui.SmtProver">
      </tactic>
   </extension>
</plugin>

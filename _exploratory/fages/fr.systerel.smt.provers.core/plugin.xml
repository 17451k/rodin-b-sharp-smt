<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eventb.core.seqprover.reasoners">
      <reasoner
            class="org.eventb.smt.provers.internal.core.ExternalSMTThroughPP"
            id="externalSMT"
            name="%externalSMT.name">
      </reasoner>
   </extension>
   <extension
         point="org.eventb.core.pomTactics">
      <tactic
            id="org.eventb.smt.provers.core.SMTPP">
      </tactic>
      <tactic
            id="org.eventb.smt.provers.core.SMTVeriT">
      </tactic>
   </extension>
   <extension
         point="org.eventb.core.seqprover.autoTactics">
      <autoTactic
            class="org.eventb.smt.provers.internal.core.AutoTactics$SMTPP"
            description="%SmtPP.description"
            id="SMTPP"
            name="%SmtPP.name">
      </autoTactic>
      <autoTactic
            class="org.eventb.smt.provers.internal.core.AutoTactics$SMTVeriT"
            description="%SMTVeriT.description"
            id="SMTVeriT"
            name="%SMTVeriT.name">
      </autoTactic>
   </extension>
   <extension
         point="org.eventb.core.seqprover.tacticParameterizers">
      <parameterizer
            class="org.eventb.smt.provers.internal.core.AutoTactics$SMTPPParameterizer"
            id="SMTPPParam"
            name="%SMTPPParam.name">
         <tacticParameter
               default="true"
               description="%restrictedDesc"
               label="restricted"
               type="Boolean">
         </tacticParameter>
         <tacticParameter
               default="3000"
               description="%timeoutDesc"
               label="timeout"
               type="Long">
         </tacticParameter>
      </parameterizer>
   </extension>

</plugin>

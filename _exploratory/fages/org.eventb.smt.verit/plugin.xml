<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eventb.smt.core.solvers">
      <solver
            localpath="$os$/verit"
            id="bundled_verit"
            kind="verit"
            name="bundled veriT">
      </solver>
   </extension>
   <extension
         point="org.eventb.smt.core.configurations">
      <configuration
            args="-i smtlib2 --disable-print-success --disable-banner --proof=- --proof-version=1 --proof-prune --disable-e --max-time=3"
            id="verit_smt2"
            name="veriT SMT2"
            smt-lib="V2.0"
            solverid="org.eventb.smt.verit.bundled_verit">
      </configuration>
   </extension>

</plugin>
